include $(TOP)/config/make.cfg

USER_INCLUDES := -I$(SRCDIR)/$(CURDIR)/include \
                 -I$(SRCDIR)/$(CURDIR)/../include

USER_CFLAGS := -D__NOLIBBASE__ -DDEBUG=0 -DSIMULATE=0 \
               -DMODELINE_VESA=0 \
               -DADATE="\"$(shell date "+%d.%m.%Y")\""

USER_LDFLAGS := -static

FUNCS := findcard initcard \
    allocbitmap \
    alloccardmem \
    blitpattern \
    blitplanar2chunky \
    blitplanar2direct \
    blitrect \
    blitrectnomaskcomplete \
    blittemplate \
    calculatebytesperrow \
    calculatememory \
    createfeature \
    deletefeature \
    drawline \
    fillrect \
    freebitmap \
    freecardmem \
    getcompatibleformats \
    getfeatureattrs \
    getpixelclock \
    invertrect \
    resetchip \
    resolvepixelclock \
    scrollplanar \
    setclearmask \
    setclock \
    setcolorarray \
    setdac \
    setdisplay \
    setdpmslevel \
    setfeatureattrs \
    setgc \
    setinterrupt \
    setmemorymode \
    setpanning \
    setreadplane \
    setsprite \
    setspritecolor \
    setspriteimage \
    setspriteposition \
    setswitch \
    setwritemask \
    updateplanar \
    waitblitter \
    waitverticalsync \
    \
    saga_intern \
    saga_pll \
    modeline_vesa

%build_module mmake=saga-card \
    modname=saga modsuffix=card modtype=library \
    files="$(FUNCS)" uselibs="romhack" \
    moduledir="$(AROS_DIR_LIBRARIES)/Picasso96"

SGDIAG_FILES := sgdiag

%build_prog mmake=saga-card-c progname=SGDiag \
      files="$(SGDIAG_FILES)" targetdir="$(AROS_C)" \
      usestartup=no

%common
